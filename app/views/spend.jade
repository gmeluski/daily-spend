extends layout

block content
    div(class="block overlay")
        div(class="centered")
            div(class="product_container")
                div(class="outer-center")
                    div(class="product inner-center")
                        span(class="currency-input") $
                            <input type="number" min="0.01" step="0.01" max="2500" value="25.67" />
                div(class="clear")
            div(class="button push-data") Add

    div(class="block")
        div(class="centered")
            div(class="product_container")
                div(class="outer-center")
                    div(class="product inner-center")
                        h1
                            <span class="dollar">$</span><span class="to-spend"></span>
                div(class="clear")
            div(class="button new-data") Add one


